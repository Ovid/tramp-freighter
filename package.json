{
  "name": "tramp-freighter-blues",
  "version": "1.0.0",
  "description": "A space trading survival game built on the Sol Sector Starmap",
  "type": "module",
  "scripts": {
    "dev": "npx http-server -p 8080 -c-1",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "eslint . --fix --quiet && prettier --write . --log-level warn",
    "all": "npm run clean && npm test"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@testing-library/dom": "^9.3.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "fast-check": "^3.15.0",
    "globals": "^16.5.0",
    "jsdom": "^23.0.0",
    "prettier": "^3.7.4",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "three": "^0.150.0"
  }
}
